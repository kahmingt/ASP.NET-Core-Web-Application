@page
@model AccountLogin

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            <h2>@ViewData["Title"]</h2>
            <br />
            <div class="card text-center">
                <div class="card-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating">
                            <input asp-for="Login.Input" class="form-control" autocomplete="" aria-required="true" />
                            <label asp-for="Login.Input" class="form-label"></label>
                            <span asp-validation-for="Login.Input" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-floating">
                            <input asp-for="Login.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Login.Password" class="form-label"></label>
                            <span asp-validation-for="Login.Password" class="text-danger"></span>
                        </div>
                        <br />
                        <div>
                            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-outline-primary">Log in</button>
                        </div>
                        <br />
                        <div>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </div>
                        <hr />
                        <br />
                        <div>
                            <a class="w-100 btn btn-lg btn-outline-success"
                               asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" id="ButtonRegister">
                                Create new account
                            </a>
                        </div>
                    </form>
                    <br />
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>